<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.crud.controllers.AuthFilter</filter-class>
    </filter>
    <servlet>
        <servlet-name>SigninServlet</servlet-name>
        <servlet-class>ru.job4j.crud.controllers.SigninServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>ru.job4j.crud.controllers.UsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserCreateServlet</servlet-name>
        <servlet-class>ru.job4j.crud.controllers.UserCreateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxForCitiesServlet</servlet-name>
        <servlet-class>ru.job4j.crud.controllers.AjaxForCitiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadS3Servlet</servlet-name>
        <servlet-class>ru.job4j.crud.controllers.UploadS3Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadS3Servlet</servlet-name>
        <servlet-class>ru.job4j.crud.controllers.DownloadS3Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserUpdateServlet</servlet-name>
        <servlet-class>ru.job4j.crud.controllers.UserUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>ru.job4j.crud.controllers.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ru.job4j.crud.controllers.LogoutServlet</servlet-class>
    </servlet>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>SigninServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserCreateServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxForCitiesServlet</servlet-name>
        <url-pattern>/create/cities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxForCitiesServlet</servlet-name>
        <url-pattern>/edit/cities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserUpdateServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadS3Servlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadS3Servlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>